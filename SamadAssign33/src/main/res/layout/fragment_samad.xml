<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFAD8"
    tools:context=".SamadActivity">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/samadcanvas"
        android:layout_width="359dp"
        android:layout_height="560dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <samad.agha.n01364908.CanvasView
            android:id="@+id/SamadDrawingcanvas"
            android:layout_width="359dp"
            android:layout_height="560dp"
            android:layout_marginBottom="8dp"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="126dp"
            android:layout_height="138dp"
            android:layout_marginStart="216dp"
            android:layout_marginTop="440dp"
            android:contentDescription="@string/avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/SamadDrawingcanvas"
            app:srcCompat="@drawable/draw" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/samadTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/hello_blank_fragment"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/samadbuttonclear"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:layout_marginStart="112dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_erase"
        android:backgroundTint="#ff0000"
        android:onClick="clearCanvas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/samadbuttondraw"
        android:layout_width="61dp"
        android:layout_height="59dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_pencil"
        android:backgroundTint="#ff0000"
        android:onClick="blackColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samadsize1"
        android:layout_width="42dp"
        android:layout_height="43dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_colour1"

        android:backgroundTint="@color/black"
        android:onClick="s3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samadsize2"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_marginEnd="96dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_colour1"

        android:backgroundTint="@color/black"
        android:onClick="s2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samadsize3"
        android:layout_width="21dp"
        android:layout_height="22dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/button_colour1"

        android:backgroundTint="@color/black"
        android:onClick="s1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samadred"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginEnd="152dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_colour1"

        android:backgroundTint="@color/red"
        android:onClick="redColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samadgreen"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_colour1"
        android:backgroundTint="@color/green"
        android:onClick="greenColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/samadblue"
        android:layout_width="57dp"
        android:layout_height="57dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_colour1"
        android:backgroundTint="@color/blue"
        android:onClick="blueColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
